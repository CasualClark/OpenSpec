{
  "$id": "https://example.org/task-mcp/receipt.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task MCP Change Receipt",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "slug",
    "commits",
    "filesTouched",
    "tests",
    "archivedAt",
    "toolVersions"
  ],
  "properties": {
    "slug": {
      "type": "string"
    },
    "commits": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "gitRange": {
      "type": "string"
    },
    "filesTouched": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tests": {
      "type": "object",
      "required": [
        "added",
        "updated",
        "passed"
      ],
      "properties": {
        "added": {
          "type": "integer",
          "minimum": 0
        },
        "updated": {
          "type": "integer",
          "minimum": 0
        },
        "passed": {
          "type": "boolean"
        }
      }
    },
    "archivedAt": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "model": {
          "type": "string"
        }
      }
    },
    "ciRunUrl": {
      "type": "string",
      "format": "uri"
    },
    "toolVersions": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}