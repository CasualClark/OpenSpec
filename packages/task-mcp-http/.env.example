# Server Configuration
PORT=8443
HOST=0.0.0.0

# TLS Configuration (for HTTPS)
# TLS_KEY=./path/to/server.key
# TLS_CERT=./path/to/server.crt

# Authentication (comma-separated list of valid tokens)
AUTH_TOKENS=dev-token-12345,prod-token-67890

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:5173

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# SSE Configuration (heartbeat interval in milliseconds)
HEARTBEAT_MS=25000

# Response Size Limits (maximum response size in KB)
MAX_RESPONSE_SIZE_KB=10

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Enhanced Security Configuration
SECURITY_HEADERS_ENABLED=true
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FILE=./audit.log
RATE_LIMIT_BURST=90
RATE_LIMIT_WINDOW_MS=60000
ENABLE_DISTRIBUTED_RATE_LIMIT=false
# REDIS_URL=redis://localhost:6379

# Working Directory
WORKING_DIRECTORY=./